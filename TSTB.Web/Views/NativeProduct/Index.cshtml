@model IEnumerable<TSTB.BLL.DTOs.NativeProductionsDTO.NativeProdutionDTO>
@using TSTB.Web
@using TSTB.BLL.DTOs.LanguageDTO
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@inject IHtmlLocalizer<SharedResource> SharedLocalizer
@using TSTB.Web.Extensions

@{
    ViewData["Title"] = SharedLocalizer["Native productions"];
}

<div class="h-full xl:container xl:px-0 px-4">
    <div class="bg-white sm:pt-12 pt-4 relative">
        <h1 class="font-bold text-2xl sm:text-3xl lg:max-w-3xl lg:text-3xl text-primary">
            @SharedLocalizer["Native productions"]
        </h1>
    </div>
    <div class="h-1 w-full bg-gray-100 lg:mt-20 sm:mt-10 mt-4"></div>
    <div class="mt-8 mb-16">
        <div class="grid xl:grid-cols-4 md:grid-cols-3 sm:grid-cols-2 gap-y-8 sm:gap-4 pb-8">
            @foreach (var nativeProduct in Model)
            {
                <div class="rounded flex flex-col max-w-xs relative overflow-hidden">
                    <img src="~/images/NativeProduction/@nativeProduct.Image" alt="" class="object-cover">
                    <a asp-area="" asp-controller="NativeProduct" asp-action="detail" asp-route-id="@nativeProduct.Id" class="md:mt-5 md:mb-3 mt-2 mb-1 font-semibold hover:text-link">
                        @nativeProduct.Name
                    </a>
                    <span class="opacity-50">@nativeProduct.CreatedDate.ToDateFormat()</span>
                </div>
            }
        </div>
    </div>
</div>