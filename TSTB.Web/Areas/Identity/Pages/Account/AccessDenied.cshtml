@page
@model AccessDeniedModel
@using TSTB.Web
@using System.Globalization;
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@inject IHtmlLocalizer<SharedResource> SharedLocalizer

@{
    ViewData["Title"] = SharedLocalizer["Access denied"];
}

<div class="h-full">
    <div class="container bg-white sm:pt-12 pt-4 relative">
        <div class="lg:px-24 px-4">
            <h1 class="font-bold text-2xl sm:text-3xl lg:max-w-3xl lg:text-3xl">
                @ViewData["Title"]
            </h1>
            <p class="sm:text-xl text-base sm:mt-8 mt-4">@SharedLocalizer["You do not have access to this resource"].</p>
        </div>

    </div>
</div>
